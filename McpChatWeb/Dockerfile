# =============================================================================
# McpChatWeb - Production Dockerfile
# Multi-stage build for .NET 9.0 ASP.NET Core application
# =============================================================================

# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy project files for restore
COPY McpChatWeb/McpChatWeb.csproj McpChatWeb/
COPY CobolToQuarkusMigration.csproj ./

# Restore dependencies
RUN dotnet restore McpChatWeb/McpChatWeb.csproj
RUN dotnet restore CobolToQuarkusMigration.csproj

# Copy all source code
COPY . .

# Build and publish McpChatWeb
WORKDIR /src/McpChatWeb
RUN dotnet publish -c Release -o /app/publish

# Build CLI tool (CobolToQuarkusMigration) for MCP server functionality
WORKDIR /src
RUN dotnet publish CobolToQuarkusMigration.csproj -c Release -o /app/cli

# Stage 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app

# Install SQLite and utilities for persistence and health checks
RUN apt-get update && apt-get install -y sqlite3 curl netcat-openbsd && rm -rf /var/lib/apt/lists/*

# Create directories for data persistence
RUN mkdir -p /app/Data /app/source /app/output /app/Logs /app/seed-data/output /app/cli

# Copy published application
COPY --from=build /app/publish .

# Copy CLI tool for MCP server
COPY --from=build /app/cli /app/cli

# Copy source COBOL files for demo
COPY source/ /app/source/

# Copy glossary data
COPY Data/glossary.json /app/Data/

# Copy Config directory for CLI tool
COPY Config/appsettings.json /app/Config/appsettings.json

# Copy pre-generated demo data as seed data
# These files are generated by running ./doctor.sh run locally
# They will be used to initialize the volume on first run
COPY Data/migration.db /app/seed-data/migration.db
COPY output/ /app/seed-data/output/

# Also copy to default locations for non-volume deployments
COPY Data/migration.db /app/Data/migration.db
COPY output/ /app/output/

# Copy entrypoint script
COPY McpChatWeb/docker-entrypoint.sh /app/docker-entrypoint.sh
RUN chmod +x /app/docker-entrypoint.sh

# Environment variables with defaults
ENV ASPNETCORE_URLS=http://+:5028
ENV ASPNETCORE_ENVIRONMENT=Production
ENV ApplicationSettings__MigrationDatabasePath=/app/Data/migration.db
ENV ApplicationSettings__Neo4j__Uri=bolt://neo4j:7687
ENV ApplicationSettings__Neo4j__Username=neo4j
ENV ApplicationSettings__Neo4j__Password=cobol-migration-2025
ENV ApplicationSettings__Neo4j__Database=neo4j
ENV ApplicationSettings__Neo4j__Enabled=true

# MCP configuration
ENV Mcp__DotnetExecutable=dotnet
ENV Mcp__AssemblyPath=/app/cli/CobolToQuarkusMigration.dll
ENV Mcp__ConfigPath=/app/Config/appsettings.json
ENV Mcp__WorkingDirectory=/app

# Expose port
EXPOSE 5028

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5028/health || exit 1

# Entry point
ENTRYPOINT ["/app/docker-entrypoint.sh"]
